  <%= f.hidden_field(:name, :value=>params[:contactus]['name']) %>
  <%= f.hidden_field(:subject, :value=>params[:contactus]['subject']) %>
  <%= f.hidden_field(:content, :value=>params[:contactus]['content']) %>
<% end -%>