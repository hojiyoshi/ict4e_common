      <h1><%= link_to(image_tag('logo.gif', :size => '336x91', :alt =>'みんなのICTホーム',:border=>0), '/') %></h1>
      <nav role="navigation">
        <ul class="functionNav">
          <li><%= link_to 'サイトマップ', '/sitemap/'%></li>
          <li><%= link_to 'お問い合わせ', 'https://www.ict4everyone.jp/contact/'%></li>
