            <ul>
              <li><a href="/use/tenji">サービス内容</a></li>
              <li><a href="/use/tenji/manual.php">ご利用方法</a></li>
              <li><a href="/use/tenji/data.php">印刷依頼データについて</a></li>
              <li><%= link_to '印刷依頼', :controller => 'tenji' %> </li>
            </ul>
